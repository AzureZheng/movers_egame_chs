<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/dx_595"
        android:layout_height="@dimen/dx_401"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/egame_tv_sdk_launch_logo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dx_96" >

        <Button
            android:id="@+id/btn_more"
            android:layout_width="@dimen/dx_260"
            android:layout_height="@dimen/dx_87"
            android:layout_centerInParent="true"
            android:background="@drawable/egame_tv_sdk_launch_btn_green_selector"
            android:text="更多游戏"
            android:textColor="@drawable/egame_tv_sdk_launch_btn_textcolor_green_selector"
            android:textSize="@dimen/_28_sp_egame_textSize" />

        <Button
            android:id="@+id/btn_enter"
            android:layout_width="@dimen/dx_260"
            android:layout_height="@dimen/dx_87"
            android:layout_marginRight="@dimen/dx_107"
            android:layout_toLeftOf="@+id/btn_more"
            android:background="@drawable/egame_tv_sdk_launch_btn_green_selector"
            android:text="进入游戏"
            android:textColor="@drawable/egame_tv_sdk_launch_btn_textcolor_green_selector"
            android:textSize="@dimen/_28_sp_egame_textSize" />

        <Button
            android:id="@+id/btn_about"
            android:layout_width="@dimen/dx_260"
            android:layout_height="@dimen/dx_87"
            android:layout_marginLeft="@dimen/dx_107"
            android:layout_toRightOf="@+id/btn_more"
            android:background="@drawable/egame_tv_sdk_launch_btn_orange_selector"
            android:text="关注我们"
            android:textColor="@drawable/egame_tv_sdk_launch_btn_textcolor_orange_selector"
            android:textSize="@dimen/_28_sp_egame_textSize" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/control_type"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/control_1" 
        android:visibility="visible"/>

</RelativeLayout>
